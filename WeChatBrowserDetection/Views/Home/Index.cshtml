@{
    ViewData["Title"] = "Home";
}
<h2>@ViewData["Title"].</h2>

@if (ViewBag.Browser.Contains("QQBrowser"))
{
    <p>Welcome WeChat browser.</p>
}
else
{
    <p>Welcome inferior browsers.</p>
}

@if (ViewBag.Browser.Contains("iPhone") || (ViewBag.Browser.Contains("iPad"))
{
    <p>Welcome iOS lover.</p>
}
else
{
    <p>Welcome Andoid, etc.</p>
}

<p>Your browser is: @ViewBag.Browser</p>